<% content_for(:browser_title) do %>
	<%=h @news_article.title %> - <%= @news_article.publish_at.to_s( :date ) %>
<% end -%>

<% content_for(:title) do %>
	<h2><%=h @news_article.title %> - <%= @news_article.publish_at.to_s( :date ) %></h2>
<% end -%>

<%= image_tag(@news_article.image.public_filename(:medium), :class => "bdr") if @news_article.image %>
<%= @news_article.rendered_text %>

<% unless @news_article.source_url.blank? %>
    <%= link_to 'View Source', @news_article.source_url %>
<% end %>

<br/>

<div id="callus">
	<h3>Call us now!</h3>
	<p>Contact us now to find out more about <strong>new vehicles</strong> or speak to one of our agents about our selection of <strong>used cars</strong> on offer. See our <a href="/contact">contact details</a> to get in touch.</p>
</div><!-- end callus -->