<div id="search">
	<% form_tag( search_path, { :id => "search_form" } ) do -%>

	  <p>
	    Make:&nbsp;
	    <%= select_tag :make_id, makes_options, :onchange => 'updateModels();' %>
	  </p>

	  <p>
	    Model:&nbsp; 
	    <%= select_tag :model_id, '<option>Any model</option>' %> <%= spinner 'models_spinner' %>
	  </p>

		<p>
			Price Range:&nbsp;
			<%= select_tag :price_range, options_for_select(
				[["< R20 000", "0|20000"],
					["R20 000 - R40 000", "20000|40000"],
					["R40 000 - R60 000", "40000|60000"],
					["R60 000 - R80 000", "60000|80000"],
