<% content_for(:browser_title) do %>
	Events
<% end -%>

<% content_for(:title) do %>
	<h2>Events</h2>
<% end -%>


<% unless @events.blank? %>

<table>
  <tr>
		<th></th>
    <th>Title</th>
  </tr>

<% for event in @events %>
  <tr>
		<td width="200"><%= link_to(image_tag(event.images.first.public_filename(:thumb), :width => "120"), event, :title => event.name) unless event.images.empty? %></td>
    <td><%= link_to event.name, event %></td>
  </tr>
<% end %>
</table>

<%= will_paginate @events %>

<% else  %>
  <p>There are no events available yet</p>
<% end  %>