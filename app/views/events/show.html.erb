<% content_for(:browser_title) do %>
	<%=h @event.name %>
<% end -%>

<% content_for(:title) do %>
	<h2><%=h @event.name %> - <%= @event.date.fmt_long_date %></h2>
<% end -%>

<p>
	<% @event.images.each do |image| %>
		<%= link_to(image_tag(image.public_filename(:thumb), :width => "120"), image_event_path(:id => @event.id, :image_id => image.id)) %>
	<% end %>
</p>