  <div id="weekly_msg">&nbsp</div>
  <form action="http://reedsgnu.createsend.com/t/r/s/krhiik/" method="post" id="subForm2" >
    <div class="form">
    <br/>
    <label for="name">Name:</label><br /><input type="text" name="cm-name" id="name" size="35"/><br />
    <label for="krhiik-krhiik">Email <span class="required">*</span>:</label><br /><input type="text" name="cm-krhiik-krhiik" id="krhiik-krhiik" size="35" onfocus="clear_warning(this.id ,'weekly_msg');"/><br />
    <label for="kjyhui-kjyhui">Verify Email <span class="required">*</span>:</label><br /><input type="text" name="cm-krhiik-krhiik-1" id="krhiik-krhiik-1" size="35" onfocus="clear_warning(this.id ,'weekly_msg');"/><br />
    <label for="phone">Phone:</label><br /><input type="text" name="cm-f-tytyky" id="phone" size="35"/><br />
    <label >Required Field <span class="required">*</span></label>
    <br />
    <input type="button" value="Subscribe" id="daily_submit" onclick="verify_email('krhiik-krhiik' , 'krhiik-krhiik-1' , 'weekly_msg' , 'subForm2');"/>
    </div>
  </form>
</div>


