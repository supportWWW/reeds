<table style="border:none;padding:0;margin:0 0 0 10px;">
  <tr >
      <td style="width:10px;padding:10px 0 0 0;border:none;"><%= radio_button_tag( :synch, :stock_list_form,
            true, :onchange => '$(\'#weekly_stock_list_form\').hide();
            $(\'#stock_list_form\').show();',:text =>" Daily" )
          %>
      </td>
      <td width="180px" style="border:none;padding:0;">
        <label>Daily Stock List:</label>
      </td>
  </tr>
  <tr>
      <td  style="width:10px;padding:10px 0 0 0;border:none;">
        <%= radio_button_tag( :synch, :weekly_stock_list_form,
          false, :onchange => '$(\'#stock_list_form\').hide();
        $(\'#weekly_stock_list_form\').show();' ,:text =>" Weekly")
        %>
      </td>
      <td style="border:none;padding:0;">
        <label>Weekly Stock List:</label>
      </td>
  </tr>
</table>
<div id="stock_list_form" >
  <h1>&nbsp;&nbsp;Daily Stock List</h1>
  <span style="clear:both;line-height:40px;">&nbsp;</span>
  <div id="daily_msg">&nbsp</div>
  <form action="http://reedsgnu.createsend.com/t/r/s/kjyhui/" method="post" id="subForm1" >
    <div class="form">
    <br />
    <label for="name">Name:</label>
    <br />
    <input type="text" name="cm-name" id="name" size="35"/>
    <br />
    <label for="kjyhui-kjyhui" >Email <span class="required">*</span>:</label>
    <br />
    <input type="text" name="cm-kjyhui-kjyhui" id="kjyhui-kjyhui" size="35" onfocus="clear_warning(this.id ,'daily_msg');"/>
    <br />
    <label for="kjyhui-kjyhui">Verify Email <span class="required">*</span>:</label>
    <br />
    <input type="text" name="cm-kjyhui-kjyhui-1" id="kjyhui-kjyhui-1" size="35" onfocus="clear_warning(this.id ,'daily_msg');" />
    <br />
    <label for="Phone">Phone:</label><br /><input type="text" name="cm-f-tjjrky" id="Phone" size="35"/><br />
    <label >Required Field <span class="required">*</span></label>
    <br />
    <input type="button" value="Subscribe" id="daily_submit" onclick="verify_email('kjyhui-kjyhui' , 'kjyhui-kjyhui-1' , 'daily_msg' , 'subForm1');"/>
    </div>
  </form>
</div>
