<h2>CMS Pages</h2>

<%= will_paginate @pages %>

<% unless @pages.blank? %>

<table>
  <tr>
    <th>Title</th>
  </tr>

<% for page in @pages %>
  <tr>
    <td><%=link_to page.title, admin_page_path(page) %></td>
    <td><%= link_to 'Edit', edit_admin_page_path(page) %> | <%= link_to 'Destroy', admin_page_path(page), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<% else  %>
  <p>There are no pages available yet</p>
<% end  %>

<%= will_paginate @pages %>

<br />

<%= link_to 'New page', new_admin_page_path %>
