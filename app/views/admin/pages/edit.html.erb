<h2>Editing page</h2>

<% form_for :page, :url => admin_page_path(@page), :html => { :method => :put, :multipart => true }  do |f| -%>
	<%= render :partial =>  "form", :locals => { :f => f } %>

	<p>
	  <%= f.submit "Update" %>
	</p>
<% end %>

<%= link_to 'Show', admin_page_path(@page) %> |
<%= link_to 'Back', admin_pages_path %>
