<%= f.error_messages %>

<p>
  <%= f.label :title %><br />
  <%= f.text_field :title %>
</p>

<p>
  <%= f.label :autor %><br />
  <%= f.text_field :author %>
</p>

<p>
  <%= f.label :category %><br />
  <%= categories_select( f ) %>
</p>

<% if news_article.image %>
	<p id="<%= "image_#{news_article.image.id}"  %>"> 
	    <%= image_tag news_article.image.public_filename %> 
	    - <%= link_to_remote 'Remove this image', :url => admin_uploaded_image_path( news_article.image ), :method => :delete, :confirm => 'Are you sure?'  %>
	</p>
<% end %>

<p>
  <%= f.label :image %><br />
  <%= f.file_field :uploaded_data %>
</p>

<p>
  <%= f.label :source_url %><br />
  <% if @news_article.source_url.blank? %>
      <%= f.text_field :source_url, :value => 'http://' %>
  <% else %>
      <%= f.text_field :source_url %>
  <% end %>
</p>

<p>
  <%= f.label :text %> (you can use the <%= link_to 'Textile', 'http://textile.thresholdstate.com/' %> format here) <br />
  <%= f.text_area :text %>
</p>

<p>
  <%= f.label :publish_at %><br />
  <%= f.datetime_select :publish_at %>
</p>
