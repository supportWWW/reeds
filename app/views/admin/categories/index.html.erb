<h2>News categories</h2>

<% unless @categories.blank? %>
  <table>
    <tr>
      <th>Name</th>
    </tr>
  
    <% for category in @categories %>
      <tr>
        <td><%=h category.name %></td>
        <td><%= link_to 'Edit', edit_admin_category_path(category) %> | <%= link_to 'Destroy', admin_category_path(category), :confirm => 'Are you sure?', :method => :delete %></td>
      </tr>
    <% end %>
  </table>
<% else %>
  <p> There are no categories available yet. </p>
<% end  %>

<br />

<%= link_to 'New category', new_admin_category_path %>
