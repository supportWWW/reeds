<% form_for(@page, :html => { :multipart => true}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  
  <p>
    <%= f.label :text %> (you can use the <%= link_to 'Textile', 'http://textile.thresholdstate.com/' %> format here) <br />
    <%= f.text_area :text %>
  </p>
  
   <p>
    <%= f.label :image %><br />
    <%= f.file_field :uploaded_data %>
  </p>
  
  <p>
    <%= f.submit "Send" %>
  </p>
<% end %>