<div id="leftcol">
	<h2>Latest News</h2>

	<% unless @news_articles.blank? %>

		<% for news_article in @news_articles %>
		
			<div id="news">
				<%= link_to(image_tag(news_article.image.public_filename(:thumb)), news_article_path(news_article), :title => "Click to read full news article") if news_article.image %>
				<p>
					<small><%= news_article.publish_at %></small><br>
					<strong><%= link_to news_article.title, news_article_path(news_article), :title => "Click to read full news article", :style => "text-decoration: none;" %></strong><br>
					<%= truncate(news_article.text, 150) %>
				</p>
			</div>

		<% end %>

	<% end %>

</div><!-- end leftcol -->


<div id="middlecol">
	<h2>Keep Informed</h2>
	<p>Sign-up here to receive two-weekly automotive newsletters straight to your inbox.</p>
	<%= render :partial => "newsletters/form" %>
</div><!-- end middlecol -->


<div id="rightcol">

	<div id="actions">
		
		<div id="callback" class="sidebox">
			<h3>Book a service</h3>
			<p><%= link_to "Click here", book_service_path, :title => "Book a service" %> to book your car<br/>in for a service.<br/><br/></p>
		</div>

		<div id="testdrive" class="sidebox">
			<h3>Specials</h3>
			<p><%= link_to "Click here", specials_path, :title => "Specials" %> to take a look at all of our latest specials.<br/><br/></p>
		</div>
		
	</div>
	

</div><!-- end rightcol -->