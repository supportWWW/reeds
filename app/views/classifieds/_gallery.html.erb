<div id="gallery">
	<script language="JavaScript" type="text/javascript">
		function movepic(img_name,img_src) {
			document[img_name].src=img_src;
		}
	</script>
	<%= image_tag classified.gallery_images.first, :size => "200x150", :title => classified.humanize, :alt => "Image", :name => "main" %>
	<div id="thumbs">
		<% classified.gallery_images.each do |image| %>
			<a href="#" onclick="movepic('main','<%= image %>')"><%= image_tag image, :title => classified.humanize, :alt => "Image" %></a>
		<% end %>
	</div><!-- end thumbs -->
	<p>Click on each image to enlarge</p>
</div><!-- end gallery -->
