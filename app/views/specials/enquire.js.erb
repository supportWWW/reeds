<% if @success -%>
	$('#specials_form_notice').html(<%= flash[:public_notice].to_json %>);
	$('#specials_form_notice').show();
	$('#google_conversion').html(<%= js_partial "shared/google_conversion" %>);
<% else -%>
	$('#specials_form_errors').html(<%= error_messages_for(:form).to_json %>);
	$('#specials_form_errors').show();
<% end -%>